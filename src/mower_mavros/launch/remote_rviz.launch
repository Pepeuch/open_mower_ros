<launch>
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find open_mower)/rviz/record_map.rviz" required="true" />
    <node pkg="rqt_reconfigure" type="rqt_reconfigure" name="rqt_reconfigure">
    </node>
    <!-- Ajout optionnel de MAVROS -->
    <node pkg="mavros" type="node" name="mavros" output="screen">
        <param name="fcu_url" value="udp://:14540@localhost:14557" /> <!-- adapter si nÃ©cessaire -->
        <param name="gcs_url" value="" />
        <param name="target_system_id" value="1" />
        <param name="target_component_id" value="1" />
</launch>
